# GitHub App Configuration
GITHUB_APP_ID={{ github_app_id }}
GITHUB_PRIVATE_KEY={{ github_private_key }}
GITHUB_WEBHOOK_SECRET={{ github_webhook_secret }}

# LLM Configuration
LLM_API_KEY={{ llm_api_key }}
LLM_PROVIDER={{ llm_provider }}  # currently only openai is supported
LLM_MODEL={{ llm_model }}  # currently only o3-mini is supported
LLM_TEMPERATURE=0
LLM_MAX_TOKENS=4000

# Optional Settings (with defaults)
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
DEBUG=false

# SMEE Configuration (for development webhook forwarding)
SMEE_URL={{ smee_url }}
SMEE_TARGET={{ smee_target }}
